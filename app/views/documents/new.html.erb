<div class="page">
  <%= form_for(@document, html: {multipart: true}) do |f| %>
    <% @document.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>

    <p>
      <%= f.label :your_name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :your_email %><br>
      <%= f.text_field :email %>
    </p>

    <p>
      <%= f.label :recipient_email %><br>
      <%= f.text_field :recipient_email %>
    </p>

    <p>
      <%= f.label :personal_message %><br>
      <%= f.text_area :message, :cols => "40", :rows => "5" %>
    </p>

    <p>
      <%= f.label :document, "Attach a file" %><br />
      <%= f.file_field :document %>
    </p>

    <p><br>
      <%= f.submit "Send document", :class => "button" %>
    </p>
  <% end %>
</div>